generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique
  email String
  firstName String
  lastName String
  avatarUrl String?
  
  orders Order[]

  createdAt DateTime @default(now())
}

model Product {
  id    String    @id @default(dbgenerated("generate_custom_id('PD'::text, 1::smallint, 5::smallint)"))
  name String
  description String
  status ProductStatus
  price Float
  images String[]
  stock Int
  isFeatured Boolean @default(false)
  sku String @unique
  category Category

  createdAt DateTime @default(now())
}

model Banner {
  id String @id @default(uuid())
  title String
  subtitle String
  image String

  createdAt DateTime @default(now())
}

model Order {
  id    String    @id @default(dbgenerated("generate_custom_id('ORD'::text, 1::smallint, 5::smallint)"))
  status String @default("pending")
  amount Float

  User User? @relation(fields: [userId], references: [id])
  userId String?

  createdAt DateTime @default(now())
}

enum ProductStatus {
  draft
  published
  archived
}

enum Category {
  tshirts
  hoodies
  jeans
  jackets
  workwear
  shoes
  accessories
}